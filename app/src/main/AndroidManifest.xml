<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.signin_signup">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.SignIn_SignUp">

        <!-- Remove the intent-filter from LoginActivity -->
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.SignIn_SignUp"
            android:launchMode="singleTop"
            android:exported="true">
            <!-- No MAIN action here anymore -->
        </activity>

        <!-- Make HomeActivity the launcher activity -->
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.SignIn_SignUp"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- LoginSuccessActivity -->
        <activity
            android:name=".LoginSuccessActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.SignIn_SignUp"
            android:exported="false" />

        <!-- SignUpActivity -->
        <activity
            android:name=".SignUpActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.SignIn_SignUp"
            android:exported="false" />

        <!-- ForgotPassword Activity -->
        <activity
            android:name=".ForgotPasswordActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.SignIn_SignUp"
            android:exported="false" />

        <activity
            android:name=".AddOrEditNoteActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.SignIn_SignUp"
            android:exported="false" />

    </application>
</manifest>
