<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Button to go to LoginActivity -->
    <Button
        android:id="@+id/btnGoToLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Go to Login Form"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button to go to AddOrEditNoteActivity -->
    <Button
        android:id="@+id/btnGoToNote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Go to Add/Edit Note"
        app:layout_constraintTop_toBottomOf="@id/btnGoToLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- Add this inside your layout, typically below the "Save" button -->

</androidx.constraintlayout.widget.ConstraintLayout>
