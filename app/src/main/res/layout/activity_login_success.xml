<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@color/windowBackground">

    <TextView
        android:id="@+id/tvSuccessMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login Successfully"
        android:textSize="24sp"
        android:textColor="@color/green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="100dp"
        android:layout_centerInParent="true"
       />

    <Button
        android:id="@+id/btnGoToLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="@color/buttonTextColor"
        android:background="@color/statusBarColor"
        android:layout_marginTop="24dp"
        android:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvSuccessMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <Button
        android:id="@+id/btnGoToSignUp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Go to Sign Up Form"
        android:textColor="@color/buttonTextColor"
        android:background="@color/light_blue"
        android:layout_marginTop="20dp"
        android:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnGoToLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <Button
        android:id="@+id/btnGoToAddOrEditNote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Go to Add/Edit Note"
        android:textColor="@color/buttonTextColor"
        android:background="@color/buttonBackgroundColor"
        android:layout_marginTop="20dp"
        android:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnGoToSignUp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>
